<style>
		/* Icons section */
	.icons {
		display: flex;
		flex-direction: column;
		gap: 3rem;

		padding: var(--gap) 0;
	}

	.icon {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: calc(var(--gap) / 2);

		text-align: center;
	}

	.icon img {
		width: 5rem;
	}


	.icon h3 {
		color: var(--primary);
		text-transform: uppercase;
	}

	@media screen and (width >= 768px) {
		.icons {
			flex-direction: row;
			gap: 2rem;
		}
	}

  /* About section */
  .about {
    display: flex;
    flex-direction: column;
  }

	.about div {
    height: 35rem;
	}

	.about-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;

    padding: 0 1rem;

    color: var(--white);
    background-color: var(--primary);
	}

	.about-text h2 {
		font-size: 3.5rem;
	}

  .about-text p {
		font-size: 1.8rem;
	  line-height: 2;
	}

	.about-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
	}

	@media screen and (width >= 768px) {
			.about {
        flex-direction: row-reverse;
			}

			.about div {
        width: 50%;
        height: 45rem;
			}

			.about-text {
        text-align: start;
			}

			.about-text p {
        max-width: 50rem;
			}
	}

  /* Models */
  main {
    padding: var(--gap) 0;
  }

  main h2 {
    margin-bottom: 5rem;

    font-size: 6rem;
  }
  
  .models-list {
    display: flex;
    flex-direction: column-reverse;
    gap: 2rem;
  }

  .model {
    min-height: 20rem;

    display: flex;
    justify-content: space-between;
    align-items: center;

    padding: 2rem;

    border-radius: 2rem;
    color: var(--primary);
    background-color: var(--lightGray);

    overflow: hidden;

    transition: transform 0.3s ease;
  }

  .model:hover {
    transform: scale(1.1);
  }

  .model .model-info {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1rem;
  }

  .model .model-image {
    width: 12rem;

    transition: transform 0.3s ease;
  }

  .model:hover .model-image {
    transform: scale(2);
  }

  .model h3 {
    font-size: 2.4rem;
  }

  .model .price {
    font-size: 4rem;
    font-weight: 900;
  }

  .model-z {
    color: var(--white);
    background-color: var(--primary);
  }

  .model-z .price {
    font-size: 6rem;
  }

  @media screen and (width >= 992px) {
    .models-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(2, 20rem);
      gap: 4rem;
    }

    .model {
      padding: 4rem;
    }

    .model-z {
      grid-row: 1 / 3;
      grid-column: 2 / 3;
    }

    .model-z .model-image {
      width: 25rem;
    }
  }

  /* Newsletter */
  .newsletter {
    display: flex;
    flex-direction: column;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;

    padding: 1rem;
  }

  .newsletter-form form {
    width: 100%;
  }

  .newsletter-form input {
    width: 100%;

    padding: 1rem;

    border: 0.1rem solid var(--lightGray);
    border-bottom: none;
  }

  .newsletter-form button {
    width: 100%;

    padding: 1rem;

    font-size: 2rem;
    font-weight: 900;

    border: 0.1rem solid var(--primary);
    border-top: none;
    color: var(--white);
    background: var(--primary);
    text-transform: uppercase;
    cursor: pointer;
  }

  @media screen and (width >= 768px) {
    .newsletter {
      flex-direction: row;
    }

    .newsletter div {
      width: 50%;
      height: 45rem;
    }

    .newsletter-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .newsletter-form p {
      max-width: 50rem;
    }

    .newsletter-form form {
      max-width: 50rem;
    }
	}

  /* Footer */
  footer p {
    padding: 2rem 0;

    font-size: 2rem;
    font-family: var(--secondFont);

    color: var(--primary);
    text-align: center;
    text-transform: uppercase;
  }
</style>